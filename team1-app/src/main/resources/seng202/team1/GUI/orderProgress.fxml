<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="TOP_LEFT" prefWidth="250.0" type="VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Orders">
         <font>
            <Font name="System Bold" size="23.0" />
         </font>
      </Label>
      <Button fx:id="createOrder" mnemonicParsing="false" text="+ create order">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>

      <Label text="Pending">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
         <content>
            <VBox fx:id="pendingOrdersVBox" prefHeight="250.0" prefWidth="100.0" />
         </content>
      </ScrollPane>
      <Label text="Completed">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
         <content>
            <VBox fx:id="completedOrdersVBox" prefHeight="250.0" prefWidth="100.0" />
         </content>
      </ScrollPane>



   </children>
</fx:root>
