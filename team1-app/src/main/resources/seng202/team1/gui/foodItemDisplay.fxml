<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root style="-fx-border-insets: 0; -fx-border-width: 1; -fx-border-style: solid;" type="VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="itemName" text="ITEM NAME">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Label>
       <Label fx:id="itemCost" text="COST">
           <font>
               <Font name="System" size="15.0" />
           </font>
       </Label>
       <Label fx:id="isVegetarian" text="VEGET">
           <font>
               <Font name="System" size="14.0" />
           </font>
       </Label>
       <Label fx:id="isVegan" text="VEG">
           <font>
               <Font name="System" size="14.0" />
           </font>
       </Label>
       <Label fx:id="isGlutenFree" text="GF">
           <font>
               <Font name="System" size="14.0" />
           </font>
       </Label>
      <Button fx:id="addToOrder" mnemonicParsing="false" text="Add to order">
          <cursor>
              <Cursor fx:constant="HAND" />
          </cursor>
      </Button>
   </children>
   <padding>
      <Insets bottom="10.0" left="7.0" right="7.0" top="7.0" />
   </padding>
</fx:root>
