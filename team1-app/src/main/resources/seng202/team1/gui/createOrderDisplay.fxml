<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="orderTotalCost">
         <font>
            <Font name="System Bold" size="23.0" />
         </font>
      </Label>
      <Label fx:id="statusText">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <Button fx:id="cancelOrder" mnemonicParsing="false" text="Cancel order">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS" maxHeight="550.0" >
         <content>
            <VBox fx:id="orderItems" prefWidth="200.0" />
         </content>
      </ScrollPane>
      <Button fx:id="submitOrder" mnemonicParsing="false" text="Submit order">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
   </children>
</fx:root>
